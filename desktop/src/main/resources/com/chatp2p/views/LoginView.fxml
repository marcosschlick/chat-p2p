<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<StackPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.chatp2p.controllers.LoginController">
    <children>
        <VBox alignment="CENTER" maxHeight="400.0" maxWidth="400.0" spacing="20.0" styleClass="login-container">
            <children>
                <VBox alignment="CENTER" spacing="10.0">
                    <children>
                        <ImageView fitWidth="160" fitHeight="160" preserveRatio="true" styleClass="user-icon">
                            <image>
                                <Image url="@../images/default_user.jpg" />
                            </image>
                        </ImageView>
                    </children>
                </VBox>
                <VBox spacing="15.0">
                    <children>
                        <TextField fx:id="usernameField" promptText="Digite seu nome de usuÃ¡rio" styleClass="login-field" />
                        <PasswordField fx:id="passwordField" promptText="Digite sua senha" styleClass="login-field" />
                    </children>
                </VBox>
                <HBox alignment="CENTER" spacing="15.0">
                    <children>
                        <Button mnemonicParsing="false" onAction="#handleLogin" styleClass="primary-button" text="ENTRAR" />
                        <Button mnemonicParsing="false" onAction="#handleCreateAccount" styleClass="secondary-button" text="CRIAR CONTA" />
                    </children>
                </HBox>
                <Label fx:id="messageLabel" styleClass="error-message" />
            </children>
            <padding>
                <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
            </padding>
        </VBox>
    </children>
</StackPane>